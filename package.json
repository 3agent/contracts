{
  "name": "3agent-contracts",
  "version": "0.1.0",
  "description": "3agent base contracts",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "typechain": "npx hardhat typechain",
    "verify": "npx hardhat verify",
    "deploy": "npx hardhat ignition deploy",
    "deploy:test": "yarn deploy ./ignition/modules/FactoryModule.ts --network sepolia --verify",
    "deploy:dev": "yarn deploy ./ignition/modules/FactoryModule.ts --network localhost",
    "upgrade:test": "yarn deploy ./ignition/modules/FactoryV2Module.ts --network sepolia --verify",
    "upgrade:dev": "yarn deploy ./ignition/modules/FactoryV2Module.ts --network localhost",
    "visualize": "npx hardhat ignition visualize",
    "start:base": "npx hardhat node --fork https://rpc.ankr.com/base/6d210a387ff8c4cdc9923ab3c3c66967b8da8dce449a1dc429dfa15d0ed97e68",
    "start:sepolia": "npx hardhat node --fork https://rpc.ankr.com/eth_sepolia/6d210a387ff8c4cdc9923ab3c3c66967b8da8dce449a1dc429dfa15d0ed97e68",
    "script:buy": "npx hardhat run scripts/getBuyPrice.ts --network localhost",
    "script:sell": "npx hardhat run scripts/getSellPrice.ts --network localhost",
    "script:price": "npx hardhat run scripts/testSqrtPrice.ts --network localhost",
    "script:finalize": "npx hardhat run scripts/createBuyFinalize.ts --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "chai": "^5.1.2",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "dotenv": "^16.4.7"
  }
}
